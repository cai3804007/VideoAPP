<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:id="@+id/threeConst"
    android:paddingBottom="8dp"
    >
<TextView
    android:layout_width="match_parent"
    android:layout_height="20dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:textColor="@color/black"
    android:textSize="16sp"
    android:text="CS+吃鸡+守望先锋，真正的大杂烩！"
    android:layout_marginRight="8dp"
    android:layout_marginLeft="8dp"
    android:id="@+id/title"
    />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:id="@+id/threenLine"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >
      <ImageView
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="78dp"
          android:layout_marginRight="10dp"
          android:src="@mipmap/news_pic"
          android:id="@+id/oneImage"
          />
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="78dp"
            android:src="@mipmap/news_pic"
            android:layout_marginRight="10dp"
            android:id="@+id/twoImage"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@mipmap/news_pic"
            android:layout_height="78dp"
            android:id="@+id/threeImage"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@+id/threenLine"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:scaleType="fitXY"
            android:src="@mipmap/header"
            android:id="@+id/userimage"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:textColor="@color/grey61"
            android:layout_marginLeft="8dp"
            android:text="游戏早知道 .1评论 .1小时前"
            android:id="@+id/timetext"
            />

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>