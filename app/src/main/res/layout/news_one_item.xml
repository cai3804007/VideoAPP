<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:paddingBottom="8dp"
    >

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/linle"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingRight="30dp"
            android:text="《天外世界：果根险境》9月9日上架游戏将支持Xbox Series X专属强化"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:maxLines="3"
            android:id="@+id/title"
            />

        <ImageView
            android:layout_width="108dp"
            android:layout_height="match_parent"
            android:id="@+id/oneImage"
            android:src="@mipmap/news_pic"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@+id/linle"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:orientation="horizontal"
        >
    <ImageView
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:scaleType="fitXY"
        android:src="@mipmap/header"
        android:id="@+id/userimage"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:textColor="@color/grey61"
        android:layout_marginLeft="8dp"
        android:text="游戏早知道 .1评论 .1小时前"
        android:id="@+id/timetext"
        />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>