<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".avtivity.RegisterActivity"
    android:background="#ffffff">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="329dp"
        android:scaleType="fitXY"
        android:src="@mipmap/login"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:background="@drawable/shape_login_form"
        android:layout_marginTop="278dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingLeft="43dp"
        android:paddingRight="31dp"
        android:id="@+id/contenView"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <ImageView
                android:layout_width="25dp"
                android:layout_height="23dp"
                android:src="@mipmap/account"/>
            <EditText
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:hint="@string/account_hint"
                android:textColorHint="#bcbcbc"
                android:textColor="#000000"
                android:id="@+id/reTex"
                android:layout_marginLeft="20dp"
                android:background="@null"
                android:textSize="18sp"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="23dp"
            android:layout_marginBottom="23dp"
            android:background="#e8e7e7"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <ImageView
                android:layout_width="25dp"
                android:layout_height="23dp"
                android:src="@mipmap/pwd"/>
            <EditText
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:hint="@string/pwd_hint"
                android:textColorHint="#bcbcbc"
                android:textColor="#000000"
                android:id="@+id/pwdText"
                android:layout_marginLeft="20dp"
                android:background="@null"
                android:textSize="18sp"
                />

        </LinearLayout>


    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_below="@+id/contenView"
        android:layout_marginTop="67dp"
        android:background="@drawable/shape_register_btn"
        android:text="注册"
        android:onClick="regesterClick"
        android:textSize="24sp"/>
</RelativeLayout>